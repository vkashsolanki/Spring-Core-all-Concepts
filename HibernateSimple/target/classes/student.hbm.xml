<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>


	<class name="com.hibernate.core.bean.Student" table="students">
		<id name="id" length="100" type="int">
			<generator class="increment"></generator>
		</id>

		<property name="name" column="student_name" length="100" />
		<property name="email" column="student_email" length="50" />
		<property name="password" column="student_password" length="50" />


	</class>
</hibernate-mapping>
